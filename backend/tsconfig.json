{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "backend/src",
    "outDir": "./dist",

    /* Environment */
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["esnext"],
    "types": ["node"], 
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Output */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Module Handling */
    "moduleResolution": "node",
    "isolatedModules": true,
    "verbatimModuleSyntax": false,

    
    // "typeRoots": ["./backend/src/types", "./node_modules/@types"]
    "typeRoots": ["./backend/src/types", "./node_modules/@types"]
  },
  "include": ["backend/src"],
  "exclude": ["backend/node_modules", "dist", "tests"]
}
